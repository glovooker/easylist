@page
@model WebApp___EasyList.Pages.ReportsModel
@{
    ViewData["Title"] = "Reports";
}
<script src="~/js/Reports.js"></script>
<div class="bs-docs-section d-flex flex-column">
    <br />
    <div class="d-flex flex-row justify-content-between">
        <h3 class="display-7 mb-3">Reports</h3>
        <div>
            <button id="btnClean" class="source-button btn btn-info w-auto mx-4" type="button" tabindex="0">Clean</button>
            <button id="btnSearch" class="source-button btn btn-primary w-auto mx-4" type="button" tabindex="0">Search</button>
            <button id="btnBack" class="btn btn-warning w-auto mx-4" type="button" tabindex="0">Back</button>
        </div>
    </div>
    <div id="reportsContainer">
        <div class="row">
            <div class="col-sm-6 form-group">
                <label for="startDate">Start Date:</label>
                <input type="date" class="form-control" id="startDate" name="startDate">
            </div>
            <div class="col-sm-6 form-group">
                <label for="endDate">End Date:</label>
                <input type="date" class="form-control" id="endDate" name="endDate">
            </div>
        </div>
        <br />
        <legend>Users</legend>
        <div class="row">
            <table id="tblPermission" class="display mt-5" style="width:100%">
                <thead>
                <th>ID</th>
                <th>Name</th>
                <th>First Lastname</th>
                <th>Second Lastname</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Registration Date</th>
                </thead>
            </table>
            <br />
        </div>
        <br />
        <br />
        <legend>Tenders</legend>
        <div class="row">
            <table id="tblTender" class="display mt-5" style="width:100%">
                <thead>
                <th>ID</th>
                <th>Title</th>
                <th>Status</th>
                <th>Max Offer Date</th>
                <th>Max Deliver Date</th>
                <th>Budget</th>
                <th>Allocation</th>
                </thead>
            </table>
            <br />
        </div>
    </div>
    <div id="OfferContainer">
        <br />
        <legend>Offers</legend>
        <div class="row">
            <table id="tblOffer" class="display mt-5" style="width:100%">
                <thead>
                <th>ID</th>
                <th>Offerer ID</th>
                <th>Tender ID</th>
                <th>Chosen</th>
                <th>Total Cost</th>
                <th>Deliver Date</th>
                </thead>
            </table>
        </div>
    </div>
    
</div>