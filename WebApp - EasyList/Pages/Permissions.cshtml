@page
@model WebApp___EasyList.Pages.UsersModel
@{
    ViewData["Title"] = "Permissions";
}
<script src="~/js/permissions.js"></script>
<div class="bs-docs-section d-flex flex-column">
    <br />
    <legend>Permissions</legend>
    <div class="row">
        <table id="tblPermission" class="display" style="width:100%">
            <thead>
            <th>Id</th>
            <th>Permission</th>
            <th>Description</th>
            <th>UserType</th>
            </thead>
        </table>
        <br />
    </div>
    <div class="row d-flex justify-content-center">
        <div class="col-lg-10">
            <div class="bs-component">
                <form>
                    <fieldset>
                        <legend>Permission Form</legend>
                        <div class="col-md-6 offset-md-3">
                            <div class="mb-3">
                                <label for="txtName" class="form-label mt-1">Name</label>
                                <input type="text" class="form-control" id="txtName" aria-describedby="emailHelp" placeholder="Enter the name." />
                            </div>
                            <div class="mb-3">
                                <label for="txtDescription" class="form-label mt-1">Description</label>
                                <input type="text" class="form-control" id="txtDescription" aria-describedby="emailHelp" placeholder="Enter the description." />
                            </div>
                            <div class="form-group">
                                <label for="selecType" class="form-label mt-1">User Type</label>
                                <select class="form-control" id="selecType">
                                    <option value="">Select by role...</option>
                                    <option value="1">Provider</option>
                                    <option value="2">Analyst</option>
                                    <option value="3">Administrator</option>
                                </select>
                            </div>
                </form>
                <br />
                <div class="d-flex flex-row justify-content-around">
                    <button id="btnNew" class="source-button btn btn-info w-25 mx-4" type="button" tabindex="0"><i class="bi bi-code">New</i></button>
                    <button id="btnCreate" class="source-button btn btn-primary w-25 mx-4" type="button" tabindex="0"><i class="bi bi-code">Save</i></button>
                    <button id="btnUpdate" class="source-button btn btn-warning w-25 mx-4" type="button" tabindex="0"><i class="bi bi-code">Update</i></button>
                    <button id="btnDelete" class="source-button btn btn-danger w-25 mx-4" type="button" tabindex="0"><i class="bi bi-code">Delete</i></button>
                </div>
            </div>
        </div>
    </div>
</div>