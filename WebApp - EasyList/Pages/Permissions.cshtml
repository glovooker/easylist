@page
@model WebApp___EasyList.Pages.UsersModel
@{
    ViewData["Title"] = "Permissions";
}
<script src="~/js/permissions.js"></script>
<div class="bs-docs-section d-flex flex-column">
    <br />
    <div class="d-flex flex-row justify-content-between">
        <h3 class="display-7 mb-3">Permissions</h3>
        <div>
            <a id="btnReturn" href="/ManagePermissions" class="btn btn-warning w-auto mx-4" type="button" tabindex="0">Return to Permissions Management</a>
            <button id="btnNew" class="btn btn-info w-auto mx-4" type="button" tabindex="0">New</button>
            <button id="btnBack" class="btn btn-warning w-auto mx-4" type="button" tabindex="0">Back</button>
        </div>
    </div>
    <div class="row" id="tblContainer">
        <table id="tblPermission" class="display mt-5" style="width:100%">
            <thead>
            <th>Id</th>
            <th>Permission</th>
            <th>Description</th>
            <th>User Role</th>
            </thead>
        </table>
        <br />
    </div>
    <div class="container my-5" id="formContainer">
        <div class="card shadow-sm mx-auto" style="max-width: 750px; border: 1px solid #e6e6e6">
            <div class="card-body">
                <h3 class="card-title text-center mb-4 fw-bold" style="font-size: 1.5rem; color: #F5805D">Permission Form</h3>
                <form>
                    <div class="col-md-6 offset-md-3">
                        <div class="mb-3">
                            <label for="txtName" class="form-label mt-1">Name</label>
                            <input type="text" class="form-control" id="txtName" aria-describedby="emailHelp" placeholder="Enter the name." />
                        </div>
                        <div class="mb-3">
                            <label for="txtDescription" class="form-label mt-1">Description</label>
                            <input type="text" class="form-control" id="txtDescription" aria-describedby="emailHelp" placeholder="Enter the description." />
                        </div>
                        <div class="form-group">
                            <label for="selecType" class="form-label mt-1">User Type</label>
                            <select class="form-control" id="selecType">
                                <option value="">Select by role...</option>
                                <option value="1">Provider</option>
                                <option value="2">Analyst</option>
                                <option value="3">Administrator</option>
                            </select>
                        </div>
                    </div>
                </form>
                <br />
                <div class="d-flex flex-row justify-content-around">
                    <button id="btnCreate" class="source-button btn btn-primary w-25 mx-4" type="button" tabindex="0">Save</button>
                    <button id="btnUpdate" class="source-button btn btn-warning w-25 mx-4" type="button" tabindex="0">Update</button>
                    <button id="btnDelete" class="source-button btn btn-danger w-25 mx-4" type="button" tabindex="0">Delete</button>
                </div>
            </div>
        </div>
    </div>

</div>