@page
@model WebApp___EasyList.Pages.LoginModel
@{
    ViewData["Title"] = "Sign In";
}
<script src="~/js/login.js"></script>
<div class="container my-5">
    <div class="card shadow-sm mx-auto" style="max-width: 750px; border: 1px solid #e6e6e6">
        <div class="card-body">
            <h3 class="card-title text-center mb-4 fw-bold" style="font-size: 1.5rem; color: #F5805D">Sign In</h3>
            <form>
                <div class="form-group">
                    <label for="txtEmail" class="form-label mt-3 fw-semibold" style="color: #262626">Email:</label>
                    <input type="email" class="form-control" id="txtEmail">
                    <div id="error-messageEmail" style="display: none; color: #A02923; font-size:0.7rem"></div>
                </div>
                <div class="form-group">
                    <label for="txtPassword" class="form-label mt-3 fw-semibold" style="color: #262626">Password:</label>
                    <input type="password" class="form-control" id="txtPassword">
                    <div id="error-messagePass" style="display: none; color: #A02923;font-size:0.7rem"></div>
                </div>
                <div class="text-end mb-3">
                    <a class="text-decoration-none fw-semibold" style="font-size:0.8rem; color: #3E314B" href="/ForgotPassword">Forgot your password?</a>
                </div>
                <div class="d-flex justify-content-center">
                    <button type="button" class="btn btn-outline-secondary me-2" id="btnBack">Back</button>
                    <button type="button" class="btn btn-primary" id="btnLogin">Sign in</button>
                </div>
                <div class="d-flex justify-content-center align-items-center mt-4">
                    <h4 style="font-size:0.9rem; color: #262626">Don't have an account yet? <a class="fw-bold text-decoration-none" style="color:#F5805D" href="/Register">Sign up</a></h4>
                </div>
            </form>
        </div>
    </div>
</div>

