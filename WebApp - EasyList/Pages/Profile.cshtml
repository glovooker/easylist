@page
@model WebApp___EasyList.Pages.ProfileModel
@{
    ViewData["Title"] = "Your Profile";
}
<script src="~/js/profile.js"></script>
<div class="container my-5 d-flex flex-column align-items-center" id="formContainer">
    <div class="card shadow-sm mx-auto" style="max-width: 750px; border: 1px solid #e6e6e6">
        <div class="card-body">
            <h3 class="card-title text-center mb-4 fw-bold" style="font-size: 1.5rem; color: #F5805D">Your Profile</h3>
            <form>
                <fieldset>
                    <div class="row">
                        <div class="col-sm-12 form-group">
                            <div class="d-flex flex-column align-items-center">
                                <img id="imgUser" class="img-thumbnail mb-2 rounded-circle img-fluid" style="object-fit:cover; width: 200px; height: 200px;" alt="" />
                            </div>
                        </div>
                        <div class="col-sm-6 form-group">
                            <label for="txtName" class="form-label mt-1">Name</label>
                            <input type="text" class="form-control" id="txtName" placeholder="Enter the name" />
                        </div>
                        <div class="col-sm-6 form-group">
                            <label for="txtFirstLastname" class="form-label mt-1">First Lastname</label>
                            <input type="text" class="form-control" id="txtFirstLastname" placeholder="Enter the first lastname" />
                        </div>
                        <div class="col-sm-6 form-group">
                            <label for="txtSecondLastname" class="form-label mt-1">Second Lastname</label>
                            <input type="text" class="form-control" id="txtSecondLastname" placeholder="Enter the second lastname" />
                        </div>
                        <div class="col-sm-6 form-group">
                            <label for="txtEmail" class="form-label mt-1">Email address</label>
                            <input type="email" class="form-control" id="txtEmail" placeholder="Enter the email" />
                        </div>
                        <div class="col-sm-6 form-group">
                            <label for="txtPhone" class="form-label mt-1">Phone number</label>
                            <input type="email" class="form-control" id="txtPhone" placeholder="Enter the phone number" />
                            <small id="emailHelp" class="form-text text-muted">Please insert only CR numbers.</small>
                        </div>
                        <div class="col-sm-6 form-group">
                            <label for="txtPhone" class="form-label mt-1">Profile Picture</label>
                            <input class="form-control" accept="image/png, image/jpeg" type="file" id="userPic" />
                        </div>
                    </div>
                </fieldset>
            </form>
            <div class="d-flex flex-row justify-content-around mt-4">
                <a id="btnBack" href="/Settings" class="btn btn-outline-secondary w-25 mx-4" type="button" tabindex="0">Back to Settings</a>
                <button id="btnUpdate" class="btn btn-warning w-25 mx-4" type="button" tabindex="0">Update</button>
            </div>
        </div>
    </div>

    <div class="mt-5 d-flex flex-row justify-content-around align-self-center" id="premiumFeatures" style="width: 900px">
        <div class="col-6" id="suscriptionModule" style="max-width: 425px;">
            <div class="card h-100">
                <div class="card-body d-flex flex-row justify-content-between align-content-center">
                    <div>
                        <h5 class="card-title"><i class="bi bi-star-fill text-primary"></i> Suscription</h5>
                        <p class="card-text">Upgrade your account</p>
                    </div>
                    <div class="d-flex align-items-center">
                        <a href="/Suscriptions" class="btn btn-outline-secondary"><i class="bi bi-arrow-right"></i></a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-6" id="inventoryModule" style="max-width: 425px;">
            <div class="card h-100">
                <div class="card-body d-flex flex-row justify-content-between align-content-center">
                    <div>
                        <h5 class="card-title"><i class="bi bi-ui-checks-grid text-primary"></i> Inventory</h5>
                        <p class="card-text">Add and manage your products</p>
                    </div>
                    <div class="d-flex align-items-center">
                        <a href="" id="inventoryAccess" class="btn btn-outline-warning" disabled data-bs-toggle="tooltip" data-bs-placement="top" title="This is a premium feature"><i class="bi bi-shield-lock-fill"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>






