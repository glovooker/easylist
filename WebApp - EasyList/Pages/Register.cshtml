@page
@model WebApp___EasyList.Pages.RegisterModel
@{
}
<script src="~/js/register.js"></script>
<div class="container-fluid p-5 m-auto">
    <div class="col-xs-12 col-md-7 mx-auto my-2 p-4 shadow border" style="border-radius:2.5rem; background-color:#e4e4e4">
        <h2 class="fs-3" style="color:#F5805D">Sign Up</h2>
        <div class="w-100 d-flex flex-row justify-content-between">
            <div class="form-group">
                <label for="txtName" class="form-label mt-3 fw-semibold">Name:</label>
                <input type="email" class="form-control" id="txtName">
                <div id="error-messageName" style="display: none; color: red; font-size:0.7rem"></div>
            </div>
            <div class="form-group">
                <label for="txtFirstLastname" class="form-label mt-3 fw-semibold">First Lastname:</label>
                <input type="email" class="form-control" id="txtFirstLastname">
                <div id="error-messageFirstLastname" style="display: none; color: red; font-size:0.7rem"></div>
            </div>
            <div class="form-group">
                <label for="txtSecondLastname" class="form-label mt-3 fw-semibold">Second Lastname:</label>
                <input type="email" class="form-control" id="txtSecondLastname">
                <div id="error-messageSecondLastname" style="display: none; color: red; font-size:0.7rem"></div>
            </div>
        </div>
        <div class="form-group">
            <label for="txtEmail" class="form-label mt-3 fw-semibold">Email:</label>
            <input type="email" class="form-control" id="txtEmail">
            <div id="error-messageEmail" style="display: none; color: red; font-size:0.7rem"></div>
        </div>
        <div class="form-group">
            <label for="txtPassword" class="form-label mt-3 fw-semibold fs-6">Password:</label>
            <input type="password" class="form-control" id="txtPassword">
            <div id="error-messagePass" style="display: none; color: red;font-size:0.7rem"></div>
        </div>
        <div style="display:flex; justify-content:space-evenly; align-items: center; margin-top:1rem">
            <button type="button" class="btn" style="width:6rem; background-color:#642D3D; color:#fff" id="btnBack">Back</button>
            <button type="button" class="btn" style="width:6rem; background-color:#642D3D; color:#fff" id="btnRegister">Sign up</button>
        </div>
        <div class="d-flex justify-content-center align-items-center">
            <h3 class="mt-4" style="font-size:0.9rem">Already have an account? <a class="fw-bold text-decoration-none" style="color:#F5805D" href="/Login">Sign in</a></h3>
        </div>

    </div>

</div>
