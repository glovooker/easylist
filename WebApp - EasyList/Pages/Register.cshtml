@page
@model WebApp___EasyList.Pages.RegisterModel
@{
    ViewData["Title"] = "Sign Up";
}
<script src="~/js/register.js"></script>
<div class="container my-5">
    <div class="card shadow-sm mx-auto" style="max-width: 750px; border: 1px solid #e6e6e6">
        <div class="card-body">
            <h3 class="card-title text-center mb-4 fw-bold" style="font-size: 1.5rem; color: #632D3D">Sign Up</h3>
            <div class="row">
                <div class="form-group col-md-4">
                    <label for="txtName" class="form-label mt-3 fw-semibold" style="color: #262626">Name:</label>
                    <input type="text" class="form-control" id="txtName">
                    <div id="error-messageName" style="display: none; color: #A02923; font-size:0.7rem"></div>
                </div>
                <div class="form-group col-md-4">
                    <label for="txtFirstLastname" class="form-label mt-3 fw-semibold" style="color: #262626">First Lastname:</label>
                    <input type="text" class="form-control" id="txtFirstLastname">
                    <div id="error-messageFirstLastname" style="display: none; color: #A02923; font-size:0.7rem"></div>
                </div>
                <div class="form-group col-md-4">
                    <label for="txtSecondLastname" class="form-label mt-3 fw-semibold" style="color: #262626">Second Lastname:</label>
                    <input type="text" class="form-control" id="txtSecondLastname">
                    <div id="error-messageSecondLastname" style="display: none; color: #A02923; font-size:0.7rem"></div>
                </div>
            </div>
            <div class="form-group">
                <label for="txtEmail" class="form-label mt-3 fw-semibold" style="color: #262626">Email:</label>
                <input type="email" class="form-control" id="txtEmail">
                <div id="error-messageEmail" style="display: none; color: #A02923; font-size:0.7rem"></div>
            </div>
            <div class="form-group">
                <label for="txtPassword" class="form-label mt-3 fw-semibold" style="color: #262626">Password:</label>
                <input type="password" class="form-control" id="txtPassword">
                <div id="error-messagePass" style="display: none; color: #A02923;font-size:0.7rem"></div>
            </div>
            <div class="d-flex justify-content-center mt-4">
                <button type="button" class="btn btn-outline-secondary me-2" id="btnBack">Back</button>
                <button type="button" class="btn btn-primary" id="btnRegister">Sign up</button>
            </div>
            <div class="d-flex justify-content-center align-items-center mt-4">
                <h4 style="font-size:0.9rem; color: #262626">Already have an account? <a class="fw-bold text-decoration-none" style="color:#F5805D" href="/Login">Sign in</a></h4>
            </div>
        </div>
    </div>
</div>






