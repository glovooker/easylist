@page
@model WebApp___EasyList.Pages.TenderModel
@{
}
<script src="~/js/Tender.js"></script>
<br />
<h1>Tender</h1>
<br />
    <div class="row">
        <table id="tblTender" class="display" style="width:100%">
            <thead>
            <th>ID</th>
            <th>Title</th>
            <th>Description</th>
            <th>Status</th>
            <th>MaxOfferDate</th>
            <th>MaxDeliverDate</th>
            <th>Budget</th>
            <th>Automatic</th>
            </thead>
        </table>
        <br />
    </div>
<div class="row d-flex justify-content-center bg-light" style="border-radius: 10px">
    <div class="col-lg-11">
        <div class="bs-component">
            <form>
                <fieldset>
                    <br />
                    <legend>Tender registration from</legend>
                    <div class="w-100 d-flex flex-row justify-content-between">
                        <div class="m-2 form-group" style="width: 45%">
                            <label for="txtTitle" class="form-label mt-4">Title</label>
                            <input type="text" class="form-control" id="txtTitle" placeholder="Enter title">
                            <div id="error-messageTitle" style="display: none; color: red; font-size:0.7rem"></div>
                        </div>
                        <div class="m-2 form-group ms-auto" style="width: 20%">
                            <label for="drpAutomatic" class="form-label mt-4">Automatic</label>
                            <select class="form-select" id="drpAutomatic">
                                <option>--Select--</option>
                                <option value=1>Yes</option>
                                <option value=0>No</option>
                            </select>
                            <div id="error-messageAutomatic" style="display: none; color: red; font-size:0.7rem"></div>
                        </div>
                    </div>
                    <div class="w-100 d-flex flex-column justify-content-between">
                        <div class="m-2 form-group ms-auto flex-grow-1" style="width: 40%">
                            <label for="txtDescription" class="form-label mt-4">Description</label>
                            <textarea type="text" class="form-control" id="txtDescription" placeholder="Enter your description"></textarea>
                            <div id="error-messageDescription" style="display: none; color: red; font-size:0.7rem"></div>
                        </div>
                        <div class="d-flex align-items-center flex-grow-0" style="width: 40%">
                            <input type="text" class="form-control" id="txtProduct" placeholder="New product">
                        </div>
                        <br />
                        <button type="button" class="btn btn-primary" style="width: 40%">New product</button>
                        <div class="m-2 form-group ms-auto flex-grow-1" style="width: 40%">
                            <label for="txtMaxDeliverDate" class="form-label mt-4">Delivery Date</label>
                            <input type="date" class="form-control" id="txtMaxDeliverDate" placeholder="Enter the maximum date for delivery">
                            <div id="error-messageMaxDeliverDate" style="display: none; color: red; font-size:0.7rem"></div>
                        </div>
                        <div class="m-2 form-group ms-auto flex-grow-1" style="width: 40%">
                            <label for="txtMaxOfferDate" class="form-label mt-4">Offer Date</label>
                            <input type="date" class="form-control" id="txtMaxOfferDate" placeholder="Enter the maximum date for offers">
                            <div id="error-messageMaxOfferDate" style="display: none; color: red; font-size:0.7rem"></div>
                        </div>
                        <div class="m-2 form-group ms-auto flex-grow-1" style="width: 40%">
                            <label for="txtBudget" class="form-label mt-4">Budget</label>
                            <input type="number" class="form-control" id="txtBudget" placeholder="Enter your budget">
                            <div id="error-messageBudget" style="display: none; color: red; font-size:0.7rem"></div>
                        </div>
                        <div class="m-2 form-group ms-auto flex-grow-1" style="width: 40%">
                            <label for="drpStatus" class="form-label mt-4">Status</label>
                            <select class="form-select" id="drpStatus">
                                <option>--Select--</option>
                                <option value=0>Open</option>
                                <option value=1>Closed</option>
                                <option value=2>Ongoing</option>
                                <option value=3>Finished</option>
                                <option value=4>Terminated</option>
                            </select>
                            <div id="error-messageStatus" style="display: none; color: red; font-size:0.7rem"></div>
                        </div>
                        <div class="w-50 m-2 form-group">
                            <label for="txtID" class="form-label mt-1">ID</label>
                            <input disabled type="number" class="form-control" id="txtID" aria-describedby="emailHelp" placeholder="User ID" />
                        </div>
                    </div>
                </fieldset>
            </form>
            <br />
            <button id="btnCreate" class="source-button btn btn-dark btn-xs" type="button" tabindex="0"><i class="bi bi-code">Publish Tender</i></button>
            <button id="btnUpdate" class="source-button btn btn-dark btn-xs" type="button" tabindex="0"><i class="bi bi-code">Update Tender</i></button>
            <button id="btnDelete" class="source-button btn btn-dark btn-xs" type="button" tabindex="0"><i class="bi bi-code">Delete Tender</i></button>
            <button id="btnNew" class="source-button btn btn-dark btn-xs" type="button" tabindex="0"><i class="bi bi-code">New Tender</i></button>
            <br />
            <br />
        </div>
    </div>
</div>