@page
@model WebApp___EasyList.Pages.LoginModel
@{
    ViewData["Title"] = "Sign In";
}
<script src="~/js/ExLogin.js"></script>
<div class="container my-5">
    <div class="card shadow-sm mx-auto" style="max-width: 750px; border: 1px solid #e6e6e6">
        <div class="card-body">
            <h3 class="card-title text-center mb-4 fw-bold" style="font-size: 1.5rem; color: #F5805D">Sign In</h3>
            <div class="form-group">
                <label for="txtEmail" class="form-label mt-3 fw-semibold">Email:</label>
                <input type="email" class="form-control" id="txtEmail" aria-describedby="emailHelp">
                <div id="error-messageEmail" style="display: none; color: red; font-size:0.7rem"></div>
            </div>
            <div class="form-group">
                <label for="txtPassword" class="form-label mt-3 fw-semibold fs-6">Temporal Password:</label>
                <input type="password" class="form-control" id="txtPassword">
                <div id="error-messagePass" style="display: none; color: red;font-size:0.7rem"></div>
            </div>
            <div class="form-group">
                <label for="txtPassword" class="form-label mt-3 fw-semibold fs-6">New Password:</label>
                <input type="password" class="form-control" id="txtNewPassword">
                <div id="error-messageNewPass" style="display: none; color: red;font-size:0.7rem"></div>
            </div>
            <div class="d-flex justify-content-center mt-4">
                <button type="button" class="btn btn-outline-secondary me-2" id="btnBack">Back</button>
                <button type="button" class="btn btn-primary" id="btnLogin">Sign in</button>
            </div>
        </div>
    </div>
</div>

