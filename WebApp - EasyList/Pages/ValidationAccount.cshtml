@page
@model WebApp___EasyList.Pages.ValidationAccountModel
@{
}
<script src="~/js/ValidationAccount.js"></script>

<div class="row justify-content-center" id="divNumeroVerificacion">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <h3 class="card-title mb-2">Validación de Cuenta</h3>
                <p class="card-text" id="pValidaOTP">Digita tu número para validar tu cuenta por medio de un SMS.</p>
                <form>
                    <div class="row">
                        <div class="col-md-3 mb-3">
                            <label for="country-code" class="form-label">Código de País</label>
                            <input type="text" class="form-control" id="country-code" placeholder="Ej: +506" required>
                        </div>
                        <div class="col-md-8 mb-3">
                            <label for="phone-number" class="form-label">Número de Teléfono</label>
                            <input type="text" class="form-control" id="phone-number" placeholder="Ej: 8888-8888" required>
                        </div>
                    </div>
                    <div class="form-check mb-3">
                        <input type="checkbox" class="form-check-input" id="email-validation-checkbox" >
                        <label class="form-check-label" for="email-validation-checkbox">Validar con correo electrónico</label>
                    </div>
                    <div class="text-center ">
                        <button type="button" id="btnValidaOTP" class="btn btn-primary">Validar OTP</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<br/>
<div class="row justify-content-center" id="divCodigoOTP">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <h3 class="card-title mb-2">Validación de Cuenta</h3>
                <p class="card-text">Digita el código que recibiste por SMS o correo electrónico.</p>
                <form class="align-items-center">
                    <div class="row d-flex justify-content-center">
                        <div class="mb-3 col-md-8  ">
                            <label for="OTP-code" class="form-label">Codigo OTP</label>
                            <input type="text" class="form-control" id="OTP-code" required>
                        </div>
                    </div>
                    <div class="text-center">
                        <button type="button" id="btnValidaCuenta" class="btn btn-primary">Validar Cuenta</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<br />
<div class="row justify-content-center"id="divVerificacionTerminada">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body ">
                <h3 class="card-title mb-2 text-center">Validación de Cuenta</h3>
                    <div class="text-center">
                        <button type="button" class="btn btn-primary">Validar Cuenta</button>
                    </div>
            </div>
        </div>
    </div>
</div>